{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "allowJs": true,

    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "noEmit": true,
    "skipLibCheck": true,
    "declarationDir": "./dist/types",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"]
  }
}